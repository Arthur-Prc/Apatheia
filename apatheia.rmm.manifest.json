{
  "name": "Apatheia Security Protocol",
  "version": "0.5.0",
  "description": "Remote work security hygiene protocol with prebuilt NinjaOne policies",
  "scope": "workspace",
  "rmmTargets": ["NinjaOne", "ConnectWiseAutomate", "DattoRMM"],
  "owner": "Apatheia",

  "prebuiltPolicies": {
    "NinjaOne": {
      "apatheia_basic_policy": {
        "policyId": "apatheia-basic-hygiene",
        "label": "Apatheia – Basic Hygiene",
        "controlLevel": "level_1_basic",
        "schedule": "daily",
        "tasks": [
          "daily_backups",
          "software_updates",
          "antivirus_scan"
        ],
        "enforcement": "monitor_only"
      },
      "apatheia_hardened_policy": {
        "policyId": "apatheia-hardened",
        "label": "Apatheia – Hardened Security",
        "controlLevel": "level_2_hardened",
        "schedule": "weekly",
        "tasks": [
          "offline_backup",
          "file_permissions",
          "email_security",
          "mfa_verification"
        ],
        "enforcement": "auto_remediate"
      },
      "apatheia_compliance_policy": {
        "policyId": "apatheia-compliance",
        "label": "Apatheia – Compliance Enforcement",
        "controlLevel": "level_3_compliance",
        "schedule": "monthly",
        "tasks": [
          "anti_ransomware",
          "password_manager",
          "hardware_keys",
          "network_firmware"
        ],
        "enforcement": "auto_remediate_blocking"
      }
    }
  },

  "controlLevels": {
    "level_1_basic": {
      "label": "Basic Hygiene",
      "minimumCompliance": 70
    },
    "level_2_hardened": {
      "label": "Hardened",
      "minimumCompliance": 85
    },
    "level_3_compliance": {
      "label": "Compliance",
      "minimumCompliance": 95
    }
  },

  "compliance": {
    "scoringModel": "weighted",
    "statuses": {
      "compliant": 90,
      "at_risk": 70,
      "non_compliant": 0
    },
    "failConditions": [
      "any_critical_task_failed",
      "policy_enforcement_failed"
    ]
  }
}
